<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".ResultActivity">

    <ImageView
        android:id="@+id/share"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/ic_share"
        android:padding="6dp"
        app:layout_constraintEnd_toEndOf="@+id/linktext"
        app:layout_constraintTop_toBottomOf="@+id/linktext" />

    <TextView
        android:id="@+id/shareText"
        android:layout_width="64dp"
        android:layout_height="23dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/rubik_mono_one"
        android:text="Share"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/share"
        app:layout_constraintTop_toBottomOf="@+id/share" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="222dp"
        android:layout_height="52dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/rubik_mono_one"
        android:text="Result Code (SonuÃ§ Kodu)"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/linktext"
        android:layout_width="299dp"
        android:layout_height="96dp"
        android:layout_marginTop="128dp"
        android:autoLink="web"
        android:fontFamily="@font/rubik_mono_one"
        android:text="Denemedasdasdasdasdasd"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_result" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="291dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-3940256099942544/6300978111"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"></com.google.android.gms.ads.AdView>

    <ImageView
        android:id="@+id/browser"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:autoLink="web"
        app:layout_constraintStart_toStartOf="@+id/linktext"
        app:layout_constraintTop_toBottomOf="@+id/linktext"
        app:srcCompat="@drawable/openbrovser" />


</androidx.constraintlayout.widget.ConstraintLayout>